        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- Right side spacer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/DAEditTextHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/da_spacing_standard"
                    android:text="Select your Gender"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/gender"
                    android:layout_width="173dp"
                    android:layout_height="53dp"
                    android:layout_below="@+id/spinner"
                    android:layout_margin="10dp"
                    android:entries="@array/gender" />


            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/DAEditTextHint"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/da_spacing_standard"
                    android:text="Enter your age"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/year"
                    style="@style/DaEditText"
                    android:layout_width="146dp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/da_spacing_standard"
                    android:background="@color/white"
                    android:hint="Age" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- Right side spacer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/DAEditTextHint"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/da_spacing_standard"
                    android:text="Gender interested in"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/gender2"
                    android:layout_width="173dp"
                    android:layout_height="47dp"
                    android:layout_below="@+id/spinner"
                    android:layout_margin="10dp"
                    android:entries="@array/gender2" />


            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/DAEditTextHint"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/da_spacing_standard"
                    android:text="Age interested in"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/dob"
                    android:layout_width="173dp"
                    android:layout_height="47dp"
                    android:layout_below="@+id/spinner"
                    android:layout_margin="10dp"
                    android:entries="@array/dob" />




            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">


            <TextView
                style="@style/DAEditTextHint"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:text="How much sugar per month?"
                android:textStyle="bold" />


        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/first"
                style="@style/DAGenderIcon"
                android:layout_width="114dp"
                android:layout_margin="@dimen/da_spacing_standard_new"
                android:hint="20K - 100K" />


            <TextView
                android:id="@+id/second"
                style="@style/DAGenderIcon"
                android:layout_width="116dp"
                android:layout_margin="@dimen/da_spacing_standard_new"
                android:hint="100K - 250K" />

            </LinearLayout>

    <TextView
        android:id="@+id/third"
